print ( "PROGRAM #2: DECRYPTION".center(50,("-")))    

#input_string
inp_phrase = input("Enter the phrase you want to decode: ")
final_output = ""

#check each character
for i in range (len(inp_phrase)):

# a = *
    if inp_phrase[i] == "*":
        final_output += "a"

# e = &
    elif inp_phrase[i] =="&":
        final_output +="e"
    
# i = #
    elif inp_phrase[i] == "#":
        final_output += "i"

# o = +
# u = !
#output/decrypted_string
